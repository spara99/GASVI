#:kivy 2.1.0

MDScreen:
    md_bg_color: 196/255, 166/255, 254/255, 1
    name: "signup"

    MDCard:
        md_bg_color: 196/255, 166/255, 254/255, 1 
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        spacing: 10
        orientation: 'vertical'

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            on_release: 
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        Image:
            source: 'logo_gasvi.png'
            size: self.texture_size

        MDLabel:
            text: "PRIMERA VEZ USANDO GASVI?"
            font_size: 50
            valign: 'top'
            halign: 'center'
            text_size: self.width, 0

        MDLabel:
            text: "Introduce tus datos de registro:"
            font_size: 30
            valign: 'top'
            halign: 'center'
            text_size: self.width, self.height

        MDFloatLayout:

            MDTextField:
                id: user
                hint_text: "Usuario"
                hint_text_color_normal: "black"
                line_color_normal: "black"
                icon_right: "account"
                icon_right_color: "black"
                size_hint_x: None
                width: 500
                font_size: 30
                pos_hint: {"center_x": 0.5, "center_y": 1.5}

            MDTextField:
                id: password
                hint_text: "Contrase√±a"
                hint_text_color_normal: "black"
                line_color_normal: "black"
                icon_right: "eye-off"
                icon_right_color: "black"
                size_hint_x: None
                width: 500
                font_size: 30
                pos_hint: {"center_x": 0.5, "center_y": 1.05}
                password: True

            MDTextField:
                id: token
                hint_text: "Token"
                hint_text_color_normal: "black"
                line_color_normal: "black"
                icon_right: "hand-coin"
                icon_right_color: 'black'
                size_hint_x: None
                width: 500
                font_size: 30
                pos_hint: {"center_x": 0.5,"center_y": 0.6}
                password: True

        MDRoundFlatButton:
            text: "REGISTRO"
            size_hint: .25, .25
            font_size: 50
            line_color: 0, 0, 0, 1
            line_width: 3
            text_color: "black"
            pos_hint: {"center_x": 0.5}
            on_release: 
                app.register()

        MDRoundFlatButton:
            text: "LIMPIAR"
            size_hint: .25, .25
            font_size: 50
            line_color: 0, 0, 0, 1
            line_width: 3
            text_color: "black"
            pos_hint: {"center_x": 0.5}
            on_release: 
                app.clearsignup()

        Widget:
            size_hint_y: None
            height: 100